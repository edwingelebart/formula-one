    "version": "0.2.0",
    "configurations": [
        {
            "name": "UV: Debug Formula One Main",
            "type": "debugpy",
            "request": "launch",
            "module": "formula_one.main",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "UV: Debug Formula One Module",
            "type": "debugpy",
            "request": "launch",
            "module": "formula_one",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "UV: Run Formula One Main (No Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "formula_one.main",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "noDebug": true
        }
    ]
}